#Definimos nuestros propios botones con unas reglas
<SpecialButton@Button>:
    size_hint: (0.2, 0.2)
    font_size: 32
    background_color: (1,1,1,0.5)
    font_size: self.width/4
<NormalButton@SpecialButton>:
    #Cambiamos el valor alfa que tiene SpecialButton
    background_color: (1,1,1,1)



<CalculadoraScreen>:
    #Creamos el Box Layout
    BoxLayout:
        #padding: 5
        spacing: 5
        
        #Orientacion vertical 
        orientation: 'vertical'
        #Definimos su tama√±o al que tenga la ventana
        size:root.width, root.height
        #Creamos la caja de texto para el display
        TextInput:
            id: entry
            halign: 'right'
            hint_text: "0"
            #font_size: self.width/4
            font_size: self.height/2
            #font_size: 70
            multiline: False
            size_hint: (1, 0.20)
            padding_y: [self.height / 2 - (self.line_height / 2.0) * len(self._lines), 0]
            
        #Creamos el Grid Layout para los botones
        GridLayout: 
            #Definimos numero de filas y columnas
            cols:4
            rows:5

            #Creamos los botones
            #PRIMERA FILA
            SpecialButton:
                text:"M"
                on_press:root.pulsacion("M")
            SpecialButton:
                text:"D"
                on_press:root.pulsacion("D")            
            SpecialButton:
                text:"C"
                on_press:root.pulsacion("C")
            SpecialButton:
                text:"L"
                on_press:root.pulsacion("L")
            #SEGUNDA FILA
            NormalButton:
                text:"7"
                on_press:root.pulsacion("7")
            NormalButton:
                text:"8"                
                on_press:root.pulsacion("8")          
            NormalButton:
                text:"9"
                on_press:root.pulsacion("9")
            SpecialButton:
                text:"V"
                on_press:root.pulsacion("V")
            #TERCERA FILA
            NormalButton:
                text:"4"
                on_press:root.pulsacion("4")
            NormalButton:
                text:"5"
                on_press:root.pulsacion("5")            
            NormalButton:
                text:"6"
                on_press:root.pulsacion("6")
            SpecialButton:
                text:"I"
                on_press:root.pulsacion("I")
            #CUARTA FILA
            NormalButton:
                text:"1"
                on_press:root.pulsacion("1")
            NormalButton:
                text:"2"
                on_press:root.pulsacion("2")            
            NormalButton:
                text:"3"
                on_press:root.pulsacion("3")
            SpecialButton:
                text:u"\u00AB"
                on_press:root.borra_caracter()
            #QUINTA FILA
            NormalButton:
                text:"0"
                on_press:root.pulsacion("0")
            SpecialButton:
                text:"CONV"
                background_normal:''
                background_color:(219/255, 180/255 , 24/255, 1)
                on_press:root.convertir()            
            SpecialButton:
                text:"DEL"
                on_press:root.borra_display()
            SpecialButton:
                text:"HELP"
                text: u"\u003F"
                on_press:root.ir_ayuda()
            

<AyudaScreen>:
    BoxLayout:
        orientation: "vertical"
        TextInput:
            text: 
                '''Conversor entre numeros decimales y romanos.
                Para realizar el calculo solo tienes que introducir el valor que deseas convertir en decimal o romano y presionar el boton CONV.
                En esta primera version no se pueden convertir a romano los decimales mayores a 4000.\n
                Autor: Raul Moreno
                Version: 1.0'''
            font_size: 50
            size_hint: (1, .7)
            readonly: True 
        Button:
            text:"Volver"
            size_hint: (1, .3)
            on_press: root.atras()

<RootWidget>:
    CalculadoraScreen:
        name: "calculadora_screen"
    AyudaScreen:
        name: "ayuda_screen"



        
